<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/freegame"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/levelStar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintEnd_toStartOf="@id/progressBar"/>
    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/levelStar"
        app:layout_constraintBottom_toBottomOf="@id/levelStar"
        app:layout_constraintStart_toStartOf="@+id/levelStar"
        app:layout_constraintEnd_toEndOf="@id/levelStar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/levelText"
        app:layout_constraintBottom_toTopOf="@id/scrollButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/popup"
        android:src="@drawable/popup_window"
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/jackpot"
        android:src="@drawable/jackpot_text"
        android:paddingTop="10dp"
        android:layout_width="120dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="@+id/popup"
        app:layout_constraintEnd_toEndOf="@id/popup"
        app:layout_constraintTop_toTopOf="@id/popup"/>

    <ImageView
        android:id="@+id/case3"
        android:src="@drawable/case_3"
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@id/moneyCase"
        app:layout_constraintTop_toTopOf="@id/moneyCase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/moneyCase"
        android:src="@drawable/layer_3"
        android:layout_marginStart="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/popup"
        app:layout_constraintStart_toStartOf="@+id/popup" />

    <TextView
        android:id="@+id/jackpotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/moneyCase"
        app:layout_constraintBottom_toBottomOf="@id/moneyCase"
        app:layout_constraintStart_toEndOf="@+id/moneyCase"
        app:layout_constraintEnd_toEndOf="@id/popup"/>
    <ImageView
        android:id="@+id/popupDown"
        android:src="@drawable/popup_window"
        android:layout_width="180dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/case3Down"
        android:src="@drawable/case_3"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/moneyJackpot"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/balance"
        android:src="@drawable/balance_text"
        android:paddingBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/moneyJackpot"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/main"
        android:src="@drawable/reels_main"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/moneyCase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOne"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintEnd_toStartOf="@+id/recyclerTwo"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTwo"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        android:layout_width="wrap_content"
        android:layout_height="180dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerThree"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintStart_toEndOf="@id/recyclerTwo"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_height="180dp"/>




    <ImageView
        android:id="@+id/moneyJackpot"
        android:src="@drawable/jackpot_express_items"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/popupDown"
        app:layout_constraintStart_toStartOf="@id/popupDown"
        app:layout_constraintEnd_toStartOf="@id/balanceText"/>
    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/popupDown"
        app:layout_constraintStart_toStartOf="@+id/moneyJackpot"
        app:layout_constraintEnd_toEndOf="@id/popupDown"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/plus"
        android:src="@drawable/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/scrollButton"
        app:layout_constraintBottom_toBottomOf="@id/scrollButton"/>
    <ImageView
        android:id="@+id/minus"
        android:src="@drawable/minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/red"
        app:layout_constraintTop_toTopOf="@id/scrollButton"
        app:layout_constraintBottom_toBottomOf="@id/scrollButton"/>
    <ImageView
        android:id="@+id/red"
        android:src="@drawable/red"
        android:layout_width="130dp"
        android:layout_marginStart="10dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@id/plus"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/blue"
        android:src="@drawable/blue"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/plus"
        app:layout_constraintTop_toTopOf="@id/scrollButton"/>

    <TextView
        android:id="@+id/betText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@id/red"
        app:layout_constraintEnd_toEndOf="@id/red"
        app:layout_constraintTop_toTopOf="@id/red"
        app:layout_constraintBottom_toBottomOf="@id/red"/>

    <ImageView
        android:id="@+id/scrollButton"
        android:src="@drawable/button_off"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/shiningStar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/shining_star"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/scrollButton"
        app:layout_constraintStart_toStartOf="@+id/scrollButton"
        app:layout_constraintTop_toTopOf="@+id/scrollButton"
        app:layout_constraintBottom_toBottomOf="@id/scrollButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>